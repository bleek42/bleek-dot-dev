{
  "compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["components/*"],
			"@constants/*": ["constants/*"],
			"@pages/*": ["pages/*"],
			"@api/*": ["pages/api/*"],
			"@styles/*": ["styles/*"],
			"@public/*": ["public/*"],
			"@interfaces/*": ["interfaces/*"],
			"@generated/*": ["generated/*"],
			"@hooks/*": ["hooks/*"],
			"@context/": ["@context/*"]
		},
		"rootDirs": [
			"components",
			"constants",
			"pages",
			"pages/api",
			"public",
			"styles",
			"types",
			"types/interfaces",
			"generated"
		],
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
