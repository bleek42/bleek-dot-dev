{
	"compilerOptions": {
		"strict": true,
		"target": "ESNext",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext",
			"ESNext.AsyncIterable"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noEmit": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"allowImportingTsExtensions": true,
		"allowUmdGlobalAccess": true,
		"allowJs": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"@components/*": [
				"components/*"
			],
			"@global/*": [
				"components/global/*"
			],
			"@pages/*": [
				"pages/*"
			],
			"@api/*": [
				"pages/api/*"
			],
			"@interfaces/*": [
				"types/interfaces/*"
			],
			"@prop-types/*": [
				"types/props/*"
			],
			"@gql/*": [
				"types/graphql/*"
			],
			"@hooks/*": [
				"hooks/*"
			],
			"@utils/*": [
				"utils/*"
			],
			"@images/*": [
				"/public/images/*"
			],
			"@fonts/*": [
				"/public/fonts/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		".graphqlrc.ts",
		"codegen.ts",
		"next-env.d.ts",
		"node-env.d.ts",
		"gql-scalars.d.ts",
		"gql-scalars.d.ts",
		"styled.d.ts",
		"node-env.d.ts",
		"next.config.js",
		"public/**/*"
	],
	"exclude": [
		"node_modules/",
		"build/",
		".next/"
	]
}
